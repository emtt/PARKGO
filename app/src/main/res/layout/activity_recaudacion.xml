<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.suministra.parkgo.Recaudacion">

    <Button
        android:id="@+id/BTN_Recaudar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_button_height"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_blue_selector"
        android:text="RECAUDAR MONTO"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/activity_button_text_size"
        android:layout_marginRight="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_FechaRecaudacion"
        android:layout_below="@+id/BTN_Recaudar">

        <TextView
            android:id="@+id/LB_FechaRecaudación"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Fecha: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/EDT_FechaRecaudacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_Operador"
        android:layout_below="@+id/LL_FechaRecaudacion">
        <TextView
            android:id="@+id/LB_Operador"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Operador: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/TV_Operador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_Ubicacion"
        android:layout_below="@+id/LL_Operador">
        <TextView
            android:id="@+id/LB_Ubicacion"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Ubicación: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/TV_Ubicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_Transacciones"
        android:layout_below="@+id/LL_Ubicacion">
        <TextView
            android:id="@+id/LB_Transacciones"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Transacciones: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/TV_Transacciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_Minutos"
        android:layout_below="@+id/LL_Transacciones">

        <TextView
            android:id="@+id/LB_Minutos"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Minutos: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TV_Minutos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_Prepago"
        android:layout_below="@+id/LL_Minutos">
        <TextView
            android:id="@+id/LB_Prepago"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Prepago: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/TV_Prepago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_Efectivo"
        android:layout_below="@+id/LL_Prepago">
        <TextView
            android:id="@+id/LB_Efectivo"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Efectivo: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/TV_Efectivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_Recaudado"
        android:layout_below="@+id/LL_Efectivo">
        <TextView
            android:id="@+id/LB_Recaudado"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Recaudado: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/TV_Recaudado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_Retirado"
        android:layout_below="@+id/LL_Recaudado">
        <TextView
            android:id="@+id/LB_Retirado"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Retirado: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/TV_Retirado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_Total"
        android:layout_below="@+id/LL_Retirado">
        <TextView
            android:id="@+id/LB_Total"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Total: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/TV_Total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />
    </LinearLayout>


</RelativeLayout>
