<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.suministra.parkgo.Menu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bienvenido"
        android:id="@+id/TV_Titulo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/space"
        android:layout_below="@+id/TV_Titulo"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_Numero_Serie"
        android:layout_below="@+id/space">

        <TextView
            android:id="@+id/LB_Num_Serie_Equipo"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="N° Serie: "
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:id="@+id/TV_Num_Serie_Equipo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_Usuario_Nombre"
        android:layout_below="@+id/LL_Numero_Serie"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/LB_Usuario_Nombre"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Usuario: "
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:textColor="@color/black"
            android:id="@+id/TV_Usuario_Nombre"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_Cliente_Razon_Social"
        android:layout_below="@+id/LL_Usuario_Nombre">

        <TextView
            android:id="@+id/LB_Cliente_Razon_Social"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Empresa: "
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:textColor="@color/black"
            android:id="@+id/TV_Cliente_Razon_Social"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_Usuario_Ubicacion"
        android:layout_below="@+id/LL_Cliente_Razon_Social">

        <TextView
            android:id="@+id/LB_Usuario_Ubicacion"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Ubicación: "
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:textColor="@color/black"
            android:id="@+id/TV_Usuario_Ubicacion" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_Usuario_Ubicacion_Dir"
        android:layout_below="@+id/LL_Usuario_Ubicacion">

        <TextView
            android:id="@+id/LB_Usuario_Ubicacion_Dir"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Dirección: "
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:textColor="@color/black"
            android:id="@+id/TV_Usuario_Ubicacion_Dir" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_Ubicacion_Horario"
        android:layout_below="@+id/LL_Usuario_Ubicacion_Dir">

        <TextView
            android:id="@+id/LB_Usuario_Ubicacion_Horario"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Horario: "
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:id="@+id/TV_Usuario_Ubicacion_Horario"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:id="@+id/space1"
        android:layout_height="15dp"
        android:layout_below="@+id/LL_Ubicacion_Horario"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_IngresarVehiculo"
        android:layout_below="@+id/space1">
        <ImageView
            android:id="@+id/IMG_IngresoPatente"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/gray"
            app:srcCompat="@drawable/ic_ingresar_24dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <Button
            android:id="@+id/BTN_IngresoPatente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_blue_selector"
            android:text="INGRESAR VEHÍCULO"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_button_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:id="@+id/space2"
        android:layout_below="@+id/LL_IngresarVehiculo"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_RetirarVehiculo"
        android:layout_below="@+id/space2">
        <ImageView
            android:id="@+id/IMG_RetiroPatente"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/gray"
            app:srcCompat="@drawable/ic_retirar_24dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <Button
            android:id="@+id/BTN_RetiroPatente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_blue_selector"
            android:text="RETIRAR VEHÍCULO"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_button_text_size"
            android:textStyle="bold"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:id="@+id/space3"
        android:layout_below="@+id/LL_RetirarVehiculo"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_ListarVehiculo"
        android:layout_below="@+id/space3">
        <ImageView
            android:id="@+id/IMG_ListaPatente"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/gray"
            app:srcCompat="@drawable/ic_listar_24dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <Button
            android:id="@+id/BTN_ListaPatente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_blue_selector"
            android:text="LISTAR VEHÍCULOS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_button_text_size"
            android:textStyle="bold"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:id="@+id/space4"
        android:layout_below="@+id/LL_ListarVehiculo"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_Recaudacion"
        android:layout_below="@+id/space4">
        <ImageView
            android:id="@+id/IMG_Recaudacion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/gray"
            app:srcCompat="@drawable/ic_chart_24dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <Button
            android:id="@+id/BTN_Recaudacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_blue_selector"
            android:text="RECAUDACIÓN"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_button_text_size"
            android:textStyle="bold"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:id="@+id/space5"
        android:layout_below="@+id/LL_Recaudacion"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_EnviarAlerta"
        android:layout_below="@+id/space5">
        <ImageView
            android:id="@+id/IMG_AlertaGeneral"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/gray"
            app:srcCompat="@drawable/ic_alerta_24dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <Button
            android:id="@+id/BTN_AlertaGeneral"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_red_selector"
            android:text="ENVIAR ALERTA"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_button_text_size"
            android:textStyle="bold"/>
    </LinearLayout>




</RelativeLayout>
